<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_gyro_starter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrl.simplegyroserver.GyroServerStarter">


    <Button
        android:text="Launch / stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/launch_button"
        android:onClick="onClickLaunchButton"
        android:visibility="invisible"

        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:id="@+id/status_text"
        android:visibility="invisible"

        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_text"
        android:layout_alignStart="@+id/status_text"
        android:layout_marginTop="14dp"
        android:id="@+id/info_text"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan swing barcode to begin"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:visibility="visible"
        android:id="@+id/barcode"
        />


</RelativeLayout>
