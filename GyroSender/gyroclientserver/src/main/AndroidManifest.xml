<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mrl.simplegyroclient"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GyroClientStarter" android:launchMode="singleTask"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name=".GyroClientStarter"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".GyroClientService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity android:name=".NFCDiscoveredActivity" >
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <category android:name="android.intent.category.INFO"/>

            <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
                       android:resource="@xml/filter_nfc"
                />
        </activity>

        <activity android:name="com.mrl.simplegyroserver.GyroServerStarter" android:label="SimpleGyroServer" android:launchMode="singleTask" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name=".GyroServerStarter"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.mrl.simplegyroserver.GyroServerService"
            android:enabled="true">
        </service>


    </application>

</manifest>